<QrCamScreen>:
    camera: camera

    BoxLayout:
        orientation: 'vertical'
        Camera:
            id: camera
            index: 0
#            resolution: (1280, 720)
            resolution: (1920, 1080)
            play: True
            size_hint_y: 8
            canvas.before:
                PushMatrix
                Rotate:
                    angle: -90
                    origin: self.center
            canvas.after:
                PopMatrix
        BoxLayout:
            orientation: 'horizontal'
            ToggleButton:
                text: 'Scan'
                size_hint: (.2, .4)
#                pos_hint: {'x': .39, 'y': .75}
                on_release:
                    root.detect_click(state=self.state)
            Button:
                text: 'Creator'
                size_hint: (.2, .4)
#                pos_hint: {'x': .39, 'y': .75}
                on_release:
                    root.manager.transition.direction = 'right'
                    root.manager.transition.duration = .5
                    root.manager.current = 'creator'

<QrCreatorScreen>:
    qr_image: qr_image
    qr_data: qr_data

    BoxLayout:
        orientation: 'vertical'
        Image:
            id: qr_image
            source: ''
        TextInput:
            id: qr_data
            size_hint_y: .4
        BoxLayout:
            orientation: 'horizontal'
            # size_hint_y: .4
            Button:
                text: 'Generate'
                size_hint: (.2, .4)
                on_release:
                    root.generate_qr_image()
            Button:
                text: 'Clear'
                size_hint: (.2, .4)
                on_release:
                    root.clear_image()
            Button:
                text: 'Save'
                size_hint: (.2, .4)
                on_release:
                    root.save_qr_image()
            Button:
                text: 'Reader'
                size_hint: (.2, .4)
    #            pos_hint: {'x': .39, 'y': .75}
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.transition.duration = .5
                    root.manager.current = 'reader'

<QrReaderScreen>:
    qr_image: qr_image
    qr_data: qr_data

    BoxLayout:
        orientation: 'vertical'
        Image:
            id: qr_image
            source: ''
        TextInput:
            id: qr_data
            readonly: True
            size_hint_y: .4
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Select'
                size_hint: (.2, .4)
                on_release:
#                    root.select_image()
                    root.show_popup()
#            Button:
#                text: 'Scan'
#                size_hint: (.2, .4)
#                on_release:
#                    root.scan_image()
            Button:
                text: 'Creator'
                size_hint: (.2, .4)
#                pos_hint: {'x': .39, 'y': .75}
                on_release:
                    root.manager.transition.direction = 'right'
                    root.manager.transition.duration = .5
                    root.manager.current = 'creator'

<FileChooserPopup@Popup>:
    chooser: chooser

    title: 'File Selector'
    auto_dismiss: 'False'
    BoxLayout:
        orientation: 'vertical'
        FileChooserListView:
            id: chooser
            path: root.get_path()
        Button:
            text: 'Select File'
            size_hint_y: .4
            on_release:
                root.dismiss_popup()